<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	<hibernate-configuration>

		<session-factory>

			<property name = "hibernate.dialect">
				org.hibernate.dialect.MySQLDialect
			</property>

			<property name = "hibernate.connection.driver_class">
				com.mysql.jdbc.Driver
			</property>

			<!-- Assume test is the database name -->

			<property name = "hibernate.connection.url">
				jdbc:mysql://localhost:3306/database_queMePongo?serverTimezone=UTC&amp;useSSL=false

            </property>

			<property name = "hibernate.connection.username">
				root
			</property>

			<property name = "hibernate.connection.password">
				admin
			</property>

			<!-- List of XML mapping files -->

			<mapping class="frecuencia.Frecuencia" />
			<mapping class="frecuencia.Unica" />
			<mapping class="frecuencia.Mensual" />
			<mapping class="frecuencia.Diaria" />
			<mapping class="frecuencia.Semanal" />
			<mapping class="frecuencia.Anual"/>
			<mapping class="tipoDePrenda.TipoPrenda" />
			<mapping class="tipoDePrenda.TipoPrendaAbrigo" />
			<mapping class="tipoDePrenda.TipoPrendaBasico" />
			<mapping class="queMePongo.Usuario" />
			<mapping class="queMePongo.PreferenciasDTO" />
			<mapping class="queMePongo.Evento" />
			<mapping class="queMePongo.Guardarropas" />
			<mapping class="queMePongo.Prenda" />
			<mapping class="queMePongo.Categoria" />
			<mapping class="queMePongo.Atuendo" />


        </session-factory>

	</hibernate-configuration>
