{{#partial "content" }}
</head>

<!-- Navigation -->
<nav class="navbar navbar-light bg-light static-top shadow">
    <div class="container">
        <a class="navbar-brand" href="/">Que Me Pongo</a>
    </div>
</nav>
<body class="text-center">

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-4">
                <div class="card text-center shadow">
                    <div class="card-header">
                        <ul class="nav nav-pills nav-fill card-header-pills">
                            <li class="nav-item">
                                <p class="nav-link active mb-0">
                                    Completa tus datos para ingresar
                                </p>
                            </li>
                        </ul>
                    </div>
                    <form action="" method="post"
                          class="form-signin">
                        <div class="card-body p-2">
                            <div class="form-group">
                                <div>
                                    <label for="user">Usuario:</label>
                                    <input aria-label="usuario" id="user" type="text"
                                           class="form-control"
                                           name="user"
                                           value="" required autofocus placeholder="Usuario" oninput="this.value=this.value.toLowerCase()">

                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <label for="password">Contraseña:</label>
                                    <input aria-label="contraseña" id="password" type="password"
                                           class="form-control"
                                           name="password"
                                           required placeholder="Contraseña">
                                    <span id="toggle-password" class="fal fa-eye field-icon" onclick="togglePass()"></span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" style="display: flex; justify-content: center;">
                            <button type="submit" class="btn btn-block btn-primary">
                                <i class="fal fa-sign-in-alt"></i>
                                Entrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{/partial}}

{{> base.hbs}}